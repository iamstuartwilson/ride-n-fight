{
  "name": "ride-n-fight",
  "version": "1.0.0",
  "description": "Fight your friends and become champion",
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "bikedujour-strava-api": "github:bikedujour/strava-api",
    "browserify": "^14.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-react": "^1.0.2",
    "express-react-views": "^0.10.2",
    "jsx-transform": "^2.3.0",
    "lowdb": "^0.16.0",
    "moment": "^2.18.0",
    "node-cache": "^4.1.1",
    "node-sass": "^4.5.0",
    "normalize.scss": "^0.1.0",
    "postcss-cli": "^3.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.0.0",
    "request": "^2.81.0",
    "uglify-js": "^2.8.14",
    "uglifyify": "^3.0.4",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {},
  "scripts": {
    "start": "node index.js",
    "build:css": "node ./node_modules/.bin/node-sass ./sass/styles.scss -o ./public/css --source-map true --include-path ./node_modules && node ./node_modules/.bin/postcss --use autoprefixer --autoprefixer.browsers 'IE 11, > 1%' ./public/css/styles.css -d ./public/css && date +'Built: %T'",
    "build:js": "node ./node_modules/.bin/browserify ./app/index.js -o ./public/js/bundle.js && node ./node_modules/.bin/uglifyjs --compress --mangle -v  -o ./public/js/bundle.min.js ./public/js/bundle.js && date +'Built: %T'",
    "build": "npm run build:css && npm run build:js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamstuartwilson/ride-n-fight.git"
  },
  "author": "@iamstuartwilson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamstuartwilson/ride-n-fight/issues"
  },
  "homepage": "https://github.com/iamstuartwilson/ride-n-fight#readme",
  "engines": {
    "node": "6.0.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
